
<div class="container">		
	<h1>Listando Actores</h1>

	<div class="text-right" >
		<%= link_to 'crear actor', new_actor_path, class: "btn btn-success" %>
	</div>		
	<br>
	<div class="row">
	<div class="table responsive">
		
		<table class="table table-striped table-bordered table-hover table-condensed center-text">
			<thead>
				<tr class="success">
					<th class="">Foto</th>
					<th class="">Nombre</th>
					<th class="">Bio</th>
					<th class="">Fecha de Nacimiento</th>
					<th class="">Lugar de Nacimiento</th>
					<th class="">Fecha y Lugar de Fallecimieno</th>
				</tr>	
			</thead>
			<tbody>
				<% @actors.each do |actor| %>
				<tr>
					<td class=""><img src="<%= actor.image_url %>" width="100" height="100"></td>
					<td class=""><%= actor.name %></td>
					<td class=""><%= actor.bio %></td>
					<td class=""><%= actor.birth_date%></td>
					<td class=""><%= actor.birth_place%></td>
					<td class="">
						<span><%= actor.alive == true  ? 'Esta vivo' :  actor.death_date %></span>	
						<span><%= actor.alive == true  ? '' :  actor.death_place %></span>	
					</td>
				</tr>
				<% end %>
				
			</tbody>
		</table>
			
		</div>
	</div>
</div>